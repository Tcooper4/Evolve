{
  "redis": {
    "host": "${REDIS_HOST:-localhost}",
    "port": "${REDIS_PORT:-6379}",
    "db": "${REDIS_DB:-0}",
    "password": "${REDIS_PASSWORD}",
    "ssl": "${REDIS_SSL:-false}",
    "timeout": 5
  },
  "ray": {
    "address": "auto",
    "namespace": "automation",
    "runtime_env": {
      "working_dir": ".",
      "py_modules": ["automation"]
    },
    "resources": {
      "num_cpus": 4,
      "num_gpus": 0
    }
  },
  "kubernetes": {
    "in_cluster": false,
    "namespace": "automation",
    "config_file": null,
    "context": null,
    "image": "automation:latest",
    "resources": {
      "requests": {
        "cpu": "500m",
        "memory": "512Mi"
      },
      "limits": {
        "cpu": "1000m",
        "memory": "1Gi"
      }
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "automation/logs/orchestrator.log",
    "max_size": 10485760,
    "backup_count": 5
  },
  "metrics": {
    "collection_interval": 5,
    "history_size": 1000,
    "prometheus": {
      "enabled": true,
      "port": 9090
    }
  },
  "agents": {
    "heartbeat_interval": 30,
    "max_retries": 3,
    "retry_delay": 5,
    "max_concurrent_tasks": 10
  },
  "tasks": {
    "max_queue_size": 1000,
    "timeout": 3600,
    "cleanup_interval": 86400
  },
  "web": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false,
    "secret_key": "${WEB_SECRET_KEY}",
    "session_timeout": 3600,
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:5000"]
    }
  }
} 