# ============================================================================
# EVOLVE TRADING PLATFORM - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here
APP_PORT=8501
APP_HOST=0.0.0.0

# ============================================================================
# API KEYS - EXTERNAL SERVICES
# ============================================================================
# OpenAI API for LLM features and AI-powered trading insights
OPENAI_API_KEY=your-openai-api-key-here
# LLM Provider Settings
REQUIRE_OPENAI=false  # Set to 'true' to make OpenAI API key mandatory

# Anthropic/Claude API Settings
ANTHROPIC_API_KEY=  # Your Anthropic API key (get from console.anthropic.com)
USE_ANTHROPIC=false  # Set to 'true' to enable Claude as LLM provider
ANTHROPIC_MODEL=claude-sonnet-4-20250514  # Claude model to use

# LLM Provider Priority (comma-separated: claude,openai,local)
LLM_PROVIDER_PRIORITY=claude,openai,local

# HuggingFace Model Settings
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-3B-Instruct  # Modern LLM (replaces old gpt2)
# Alternatives: mistralai/Mistral-7B-Instruct-v0.2, microsoft/phi-2

# Financial Data Providers
# Alpha Vantage: Real-time and historical stock data, forex, and crypto
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
# Finnhub: Real-time market data, news, and sentiment analysis
FINNHUB_API_KEY=your-finnhub-api-key-here
# Polygon: Real-time and historical market data for stocks, forex, and crypto
POLYGON_API_KEY=your-polygon-api-key-here

# News and Sentiment APIs
NEWSAPI_KEY=your-newsapi-key-here
REDDIT_CLIENT_ID=your-reddit-client-id-here
REDDIT_CLIENT_SECRET=your-reddit-client-secret-here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL Database (primary database backend)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading
DB_USER=postgres
DB_PASSWORD=your-postgres-password-here
DB_SSL_MODE=prefer
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# SQLite (fallback if PostgreSQL not available, leave DB_PASSWORD empty to use SQLite)
SQLITE_PATH=data/trading.db
SQLITE_TIMEOUT=30

# Redis (for caching, session management, and real-time data)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here

# Consul (for service discovery and configuration management)
CONSUL_URL=http://localhost:8500

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
# Risk Management
TRADING_MAX_POSITION_SIZE=0.1
TRADING_MAX_DRAWDOWN=0.2
TRADING_STOP_LOSS=0.05
TRADING_TAKE_PROFIT=0.1

# Trading Parameters
TRADING_INITIAL_CAPITAL=100000.0
TRADING_REBALANCE_FREQUENCY=1D
TRADING_MAX_LEVERAGE=1.0

# Strategy Configuration
STRATEGY_MAX_POSITION_SIZE=100000
STRATEGY_MIN_POSITION_SIZE=1000
STRATEGY_MAX_LEVERAGE=1.0
STRATEGY_STOP_LOSS=0.02
STRATEGY_TAKE_PROFIT=0.04

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
# Model Storage
TRADING_MODEL_DIR=models
TRADING_BATCH_SIZE=32
TRADING_LEARNING_RATE=0.001
TRADING_MAX_EPOCHS=100

# Strategy Configuration
TRADING_STRATEGY_DIR=strategies
TRADING_DEFAULT_STRATEGY=default
TRADING_ENSEMBLE_SIZE=3

# ============================================================================
# MODEL EVALUATION THRESHOLDS
# ============================================================================
# Performance Evaluation Thresholds
SHARPE_THRESHOLD_POOR=0.5  # Below this = poor performance
SHARPE_THRESHOLD_GOOD=1.0  # Above this = good performance
DRAWDOWN_THRESHOLD=-0.15  # Below this = poor performance
WIN_RATE_THRESHOLD=0.45  # Below this = poor performance
VOLATILITY_THRESHOLD=0.25  # Above this = high volatility
CALMAR_THRESHOLD=0.5  # Below this = poor risk-adjusted return
MSE_THRESHOLD=0.1  # Above this = high prediction error
ACCURACY_THRESHOLD=0.55  # Below this = low accuracy

# Model Update Thresholds
MODEL_UPDATE_CRITICAL_SHARPE=0.0  # Below this = critical, replace model
MODEL_UPDATE_CRITICAL_DRAWDOWN=-0.25  # Below this = critical, replace model
MODEL_UPDATE_CRITICAL_WIN_RATE=0.3  # Below this = critical, replace model
MODEL_UPDATE_RETRAIN_SHARPE=0.3  # Below this = needs retraining
MODEL_UPDATE_RETRAIN_DRAWDOWN=-0.15  # Below this = needs retraining
MODEL_UPDATE_TUNE_SHARPE=0.5  # Below this = needs tuning
MODEL_UPDATE_TUNE_DRAWDOWN=-0.10  # Below this = needs tuning
MODEL_UPDATE_ENSEMBLE_THRESHOLD=0.6  # Below this = adjust ensemble weights

# Strategy Retirement Thresholds
STRATEGY_RETIRE_SHARPE=0.0  # Below this = retire strategy
STRATEGY_RETIRE_WIN_RATE=0.2  # Below this = retire strategy
STRATEGY_RETIRE_RETURN=-0.2  # Below this = retire strategy

# ============================================================================
# DATA AND CACHE CONFIGURATION
# ============================================================================
TRADING_DATA_DIR=data
TRADING_CACHE_DIR=cache
CACHE_ENABLED=true
CACHE_TTL=3600

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================
LOG_LEVEL=INFO
TRADING_LOG_LEVEL=INFO
TRADING_LOG_DIR=logs
STRATEGY_LOG_LEVEL=INFO

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================
# Email Notifications
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=your-notification-email@example.com

# Slack Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url-here

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================
# Safe Executor
SAFE_EXECUTOR_TIMEOUT=300
SAFE_EXECUTOR_MEMORY_LIMIT=1024

# Reasoning Service
REASONING_SERVICE_NAME=reasoning_service

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60
MAX_RETRIES=3
RETRY_DELAY=1.0

# ============================================================================
# OPTIMIZATION CONFIGURATION
# ============================================================================
OPTIMIZER_LEARNING_RATE=0.001
OPTIMIZER_HIDDEN_DIMS=64,32
OPTIMIZER_DROPOUT_RATE=0.1
OPTIMIZER_BATCH_NORM=true
OPTIMIZER_LOG_LEVEL=INFO
OPTIMIZER_RESULTS_DIR=optimization_results

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# Debug Mode
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Testing
TESTING=false
MOCK_EXTERNAL_APIS=true

# Input Validation
VALIDATE_INPUTS=true
STRICT_MODE=false

# ============================================================================
# CUSTOM CONFIGURATION
# ============================================================================
# Add any custom environment variables below
CUSTOM_FEATURE_FLAG=false
CUSTOM_API_ENDPOINT=https://api.example.com 