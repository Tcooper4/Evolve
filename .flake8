[flake8]
exclude =
    .git,
    __pycache__,
    .venv,
    env,
    logs,
    archive,
    docs/*.md,
    *.csv,
    *.pkl,
    *.pdf,
    *.png,
    *.zip,
    deploy/Makefile,
    notebooks
max-line-length = 120
extend-ignore = E203, E266, E501, W503
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S105,S106,S107
    */test_*.py:S101,S105,S106,S107
    *_test.py:S101,S105,S106,S107 